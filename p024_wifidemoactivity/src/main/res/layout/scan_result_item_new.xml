<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll4"
                android:layout_width="250dp"
                android:layout_height="64dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ssid_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_toRightOf="@+id/level_tv"
                    android:text="ssid"
                    android:textColor="#5696E2"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/level_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="level"
                    android:textColor="#5696E2"
                    android:textSize="28sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

            <TextView
                android:id="@+id/encrypt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="180dp"
                android:layout_toRightOf="@+id/ll4"
                android:text="encrypt"
                android:textColor="#5696E2"
                android:textSize="28sp" />

            <ImageView
                android:id="@+id/img_wifi_level"
                android:layout_width="43dp"
                android:layout_height="33dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="40dp"
                android:background="@mipmap/wifi_leavel11"
                android:padding="10dp" />
        </RelativeLayout>

        <!--  <TextView
              android:id="@+id/connect_tv"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:padding="10dp"
              android:textColor="@color/mine_textcolor"
              android:textSize="@dimen/x25"
              android:text="已连接" />-->

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:background="#000000" />

    </LinearLayout>

</LinearLayout>