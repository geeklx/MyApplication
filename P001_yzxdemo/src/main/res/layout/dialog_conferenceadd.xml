<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">
	<TextView
	    android:layout_width="fill_parent"
	    android:layout_height="40dip"
	    android:paddingLeft="10dip"
	    android:clickable="false"
	    android:gravity="center_vertical"
	    android:text="@string/conference_addperson"
	   	android:textColor="#414141"
	    android:background="#ffffff"
	    android:textSize="20sp" />
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="2dip"
	    android:background="#67b83d"/>
	<ListView 
	 	android:id="@+id/conference_list"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:dividerHeight="1dp"
	    android:fadingEdge="none"
	    android:footerDividersEnabled="true"
	    android:listSelector="#00000000"
	    android:scrollbars="vertical"
	    android:transcriptMode="normal" > 
	</ListView>
	<TextView
       android:id="@+id/conference_start_again"
       android:layout_width="fill_parent"
       android:layout_height="50dip"
       android:clickable="false"
       android:gravity="center"
       android:text="@string/conference_start_again"
       android:textColor="#ffffff"
       android:background="@drawable/login_login"
    android:textSize="20sp" />
</LinearLayout>
 


